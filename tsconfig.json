{
  "compilerOptions": {
    "target": "es2021", // 编译以后的文件使用何种标准
    "useDefineForClassFields": true,  
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": false,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "./vite.config.ts"
  ],
  "exclude": ["node_modules"]
}